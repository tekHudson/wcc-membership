<% if user_signed_in? %>
  <% if current_user.admin? %>
    <h3>Admin</h3>
    <p><%= link_to 'User count:', users_path %> <%= User.count %></p>
  <% else %>
    <h3>You've signed up. Download a free book.</h3>
    <%= link_to 'Download PDF', products_path('product.pdf'), class: 'btn btn-success btn-large' %>
  <% end %>
<% else %>
  <div class="welcome row">
    <div class="col-sm-12">
      <div class="well">
        <div id="welcome" class="span7">
          <h1>West Coast Cigars Membership</h1>
          <h3>Join the elite West Coast Club and gain all the perks.</h3>
          <h5>Now with the new Espinoza Lounge.</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="row plans">
    <div class="col-sm-12">
      <div class="col-sm-4">
        <div class="well">
          <div><h2>Glass Tube</h2></div>
          <ul class="list-unstyled">
            <li>Access to membership pre-event gatherings</li>
            <li>1 Cigar of the month</li>
          </ul>
          <h3>$9/mo</h3>
          <%= link_to 'Subscribe', new_user_registration_path(plan: 'silver'), :class => 'btn btn-primary' %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="well featured">
          <div><h2>Herfador</h2></div>
          <ul class="list-unstyled">
            <li>Access to the Espinoza lounge</li>
            <li>Access to membership pre-event gatherings</li>
            <li>2 different cigars of the month</li>
          </ul>
          <h3>$29/mo</h3>
          <%= link_to 'Subscribe', new_user_registration_path(plan: 'gold'), :class => 'btn btn-primary' %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="well">
          <div><h2>Humidor</h2></div>
          <ul class="list-unstyled">
            <li>Access to the Espinoza lounge</li>
            <li>Access to membership pre-event gatherings</li>
            <li>5 different premium hand picked cigars per month</li>
            <li>Option to get personal humidified locker</li>
            <li>10% additional off all purchases</li>
          </ul>
          <h3>$49/mo</h3>
          <%= link_to 'Subscribe', new_user_registration_path(plan: 'platinum'), :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
